html 
    head 
        title home 
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
        <link href="Fontsawesome/css/all.css" rel="stylesheet">
        <link href="Fontsawesome/webfonts.css" rel="stylesheet">
        <!-- Bootstrap CSS -->
        //- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
        <!-- Bootstrap Font Icon CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        style
            include ../static/answer.css

    body 
        //- h1 hello
        nav.sidenav
            h2.logo Discusso 
            ul.menu
                li.home 
                    i(class="bi bi-house-door-fill" id="home-icon")
                    a(href="/") Home 
                //- li  .que 
                    i(class="bi bi-question-diamond-fill" id="que-icon")
                    a(href="/question") Questions 
                if isAuth
                    li.ask  
                        i(class="bi bi-question-diamond-fill" id="que-icon")
                        a(href="/ask") Ask Question
                    li.profile 
                        i(class="bi bi-person-plus-fill")
                        a(href="/profile") Profile
                    li.logout 
                        i(class="bi bi-door-closed-fill")
                        a(href="/logout") LogOut
                else 
                    li.login 
                        i(class="bi bi-door-open-fill")
                        a(href="/login") Login  
                    li.signup 
                        i(class="bi bi-person-plus-fill")
                        a(href="/signup") Signup
                li.About 
                    i(class="bi bi-info-circle-fill")
                    a(href="/about") AboutUs 
        ul.navbar
            li.que 
                i(class="bi bi-search" id="search-btn")
                input(type="text" placeholder="Search Questions..." class="search" id="search-bar") 
            li.welcome 
                i(class="bi bi-person-fill")
                if isAuth
                    a(href="/about") Welcome, #{fname}
                else 
                    a(href="/about") Welcome, Guest
        .container 
            h1.tag-line1  Questions?
            //- p hello
            p.tag-line2 
                i Don't hesitate to ask for help...
        form(action = "/answer" method="POST").ans_que 
            //- .title 
                label.title-label(for="title") From
                input(type="email" class="head" name="title" value=email disabled)
            .id 
                label.id-label(for="id_input") ID
                input(type="text" class="id_input" name="iid" value=iid )
            .que-is  
                label.title-label(for="question") Question:
                input(type="text" class="input_que_is" name="question" value=que required)
            .body   
                label.title-label(for="Body") Answer Question here:
                textarea(type="text" class="input_body" name="body" cols="86" rows="10" placeholder="Your Answer?" required)
            .review_btn    
                input.sub_btn(type= "submit" value= "submit")
        h1.p-ans 
            | Previous Answers
        each ans in anss    
            .answer-box 
                .ans-box 
                    i(class="bi bi-dot")
                    |#{ans.body}
        .footer
                |hello