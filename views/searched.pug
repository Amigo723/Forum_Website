        style
            include ../static/searched.css

    body 
        //- h1 hello
        nav.sidenav
            h2.logo Discusso 
            ul.menu
                li.home 
                    i(class="bi bi-house-door-fill" id="home-icon")
                    a(href="/") Home 
                //- li  .que 
                    i(class="bi bi-question-diamond-fill" id="que-icon")
                    a(href="/question") Questions 
                if isAuth
                    li.ask  
                        i(class="bi bi-question-diamond-fill" id="que-icon")
                        a(href="/ask") Ask Question
                    li.profile 
                        i(class="bi bi-person-plus-fill")
                        a(href="/profile") Profile
                    li.logout 
                        i(class="bi bi-door-closed-fill")
                        a(href="/logout") LogOut
                else 
                    li.login 
                        i(class="bi bi-door-open-fill")
                        a(href="/login") Login  
                    li.signup 
                        i(class="bi bi-person-plus-fill")
                        a(href="/signup") Signup
                li.About 
                    i(class="bi bi-info-circle-fill")
                    a(href="/about") AboutUs 
        ul.navbar
            li.que 
                i(class="bi bi-search" id="search-btn")
                input(type="text" placeholder="Search Questions..." class="search" id="search-bar") 
            li.welcome 
                i(class="bi bi-person-fill")
                if isAuth
                    a(href="/about") Welcome, #{fname}
                else 
                    a(href="/about") Welcome, Guest
        .container 
            h1.tag-line1  Questions?
            //- p hello
            p.tag-line2 
                i Don't hesitate to ask for help...
        //- .path   
            i(class="bi bi-house-door-fill" id="home-icon")
        form(action ="/searched" method ="GET").search-ques 
            //- input(type="text" placeholder="Search Questions..." class="search" id="search-bar")
            input.search(type="text" placeholder="Search Questions..." name="search" required)
            input.submit(type="submit" value="submit")
        //- a.ask(href="/ask") AskQuestion
        h1.searched 
            | searched questions...
        each que in data 
            form(action = "/searched" method="POST").question-box
                    .question  
                        //- | #{que.question}
                        input(type="text" class="quelist" name="quelist" value=que.body)
